# Configurações do Servidor
PORT=6199
NODE_ENV=development

# Configurações do Banco de Dados
MONGODB_URI=mongodb://localhost:27017/eureka
MONGODB_DB=eureka

# Configurações de Autenticação JWT
JWT_SECRET=seu_segredo_jwt_super_secreto_aqui
JWT_REFRESH_SECRET=seu_refresh_secret_super_secreto_aqui
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Configurações de CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:3001,http://localhost:3002

# Configurações AWS S3 (para upload de imagens)
AWS_ACCESS_KEY_ID=sua_access_key
AWS_SECRET_ACCESS_KEY=sua_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=eureka-uploads

# Configurações de Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./tmp/uploads

# Configurações de Log
LOG_LEVEL=debug 